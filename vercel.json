{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "bun run build",
  "installCommand": "bun install",
  "framework": "nextjs",
  "regions": ["fra1"],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "X-Environment", "value": "$VERCEL_ENV" }
      ]
    }
  ],
  "env": {
    "ENVIRONMENT": "$VERCEL_ENV"
  }
}
